// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Box {
  id       Int        @id @default(autoincrement())
  nom      String
  pieces   Int
  prix     Float
  image    String
  aliments Aliments[]
  saveurs  Saveurs[]
  boxtocom BoxToCom[]
}

model Aliments {
  id       Int    @id @default(autoincrement())
  nom      String
  quantite Int
  boxId    Int
  box      Box    @relation(fields: [boxId], references: [id])
}

model Saveurs {
  id    Int    @id @default(autoincrement())
  nom   String
  boxId Int
  box   Box    @relation(fields: [boxId], references: [id])
}

model Commandes {
  id       Int        @id @default(autoincrement())
  date     DateTime   @default(now())
  prix_t   Float
  boxtocom BoxToCom[]
}

model BoxToCom {
  id        Int       @id @default(autoincrement())
  boxId     Int
  box       Box       @relation(fields: [boxId], references: [id])
  comId     Int
  commandes Commandes @relation(fields: [comId], references: [id])
}
