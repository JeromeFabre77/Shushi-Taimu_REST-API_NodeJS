generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model aliments {
  id       Int    @id @default(autoincrement())
  nom      String
  quantite Int
  boxId    Int
  box      box    @relation(fields: [boxId], references: [id], map: "Aliments_boxId_fkey")

  @@index([boxId], map: "Aliments_boxId_fkey")
}

model box {
  id       Int        @id @default(autoincrement())
  nom      String
  pieces   Int
  prix     Float
  image    String
  aliments aliments[]
  saveurs  saveurs[]
}

model saveurs {
  id    Int    @id @default(autoincrement())
  nom   String
  boxId Int
  box   box    @relation(fields: [boxId], references: [id], map: "Saveurs_boxId_fkey")

  @@index([boxId], map: "Saveurs_boxId_fkey")
}
